# Block module  
action create_block(index, data, previous_hash):
    return {
        "index": index,
        "data": data,
        "previous_hash": previous_hash,
        "hash": "block_hash_" + string(index)
    }

action create_blockchain():
    return [create_block(0, "Genesis Block", "0")]

action add_block(blockchain, data):
    let last_index = blockchain[len(blockchain) - 1].index
    let new_block = create_block(last_index + 1, data, "prev_hash")
    blockchain.push(new_block)
    return blockchain

